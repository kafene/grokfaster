{
  "manifest_version": 2,

  "name": "grokfaster",
  "description": "speed read the internet, grok what you need to, faster.",
  "version": "0.1",

  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },

  "permissions": [
    "contextMenus", "activeTab", "storage", "http://*/*", "https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [ {
    "css": [ "content.css" ],
    "js": [ "content.js" ],
    "matches": [ "http://*/*", "https://*/*" ],
    "all_frames": true,
    "run_at": "document_start"
  } ],
  "background": {
    "scripts": [ "background.js" ]
  }
}
